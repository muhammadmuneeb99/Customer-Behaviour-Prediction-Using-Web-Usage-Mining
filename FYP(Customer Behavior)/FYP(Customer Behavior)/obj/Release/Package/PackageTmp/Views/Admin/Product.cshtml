@model  IEnumerable<FYP_Customer_Behavior_.Models.Dtos.AdminProductDetailDto>

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/AdminPanel.cshtml";
}
<main>
        <div class="container" style="width:100%; height:auto; margin-top:2%;">
            <table class="display centered bordered responsive-table" style="" id="example">
                <thead>
                    <tr>
                        <th style="font-size:12px">Product ID</th>
                        <th style="font-size:12px">Product Name</th>
                        <th style="font-size:12px">Brand</th>
                        <th style="font-size:12px">Sub Category2</th>
                        <th style="font-size:12px">Sub Category1</th>
                        <th style="font-size:12px">Category</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var value in Model)
                    {

                        <tr>
                            <td style="font-size:12px">@value.id</td>
                            <td style="font-size:12px">@value.pName</td>
                            <td style="font-size:12px">@value.BrandName</td>
                            <td style="font-size:12px">@value.subcat2</td>
                            <td style="font-size:12px">@value.subcat1</td>
                            <td style="font-size:12px">@value.cat</td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
</main>

<script type="text/javascript">
    $(document).ready(function () {
        // Setup - add a text input to each footer cell
        $('#example thead tr').clone(true).appendTo('#example thead');
        $('#example thead tr:eq(1) th').each(function (i) {
            var title = $(this).text();
            if (title === "") {
            }
            else if (title === "Order Date") {
                $(this).html('<input type="text" style="font-size:12px;" placeholder="' + title + '" />');
            }
            else {
                $(this).html('<input type="text" style="font-size:12px;" placeholder="' + title + '" />');
            }

            $('input', this).on('change keyup ', function () {
                if (table.column(i).search() !== this.value.toString()) {
                    table
                        .column(i)
                        .search(this.value.toString())
                        .draw();
                }
            });
        });
        var table = $('#example').DataTable({
            responsive: true,
            orderCellsTop: true,
            //fixedHeader: true
        });
    });
</script>

