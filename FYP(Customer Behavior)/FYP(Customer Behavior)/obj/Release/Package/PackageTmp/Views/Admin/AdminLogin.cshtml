
@{
    ViewBag.Title = "AdminLogin";
    Layout = "~/Views/Shared/AdminLoginLayout.cshtml";
}

<div class="section"></div>
<div class="section"></div>

<main>
    <center>
        <h5 style="color: #292929;">Welcome! Please Login</h5>
        <div class="container">
            <div class="z-depth-5 white row hoverable" style="display: inline-block; padding: 32px 30px 0px 30px;border: 1px solid #EEE;">

                <form class="col s12" action="AdminLogin" method="post">
                    <div class='row'>
                        <div class='col s12'>
                        </div>
                    </div>

                    <div class='row'>
                        <div class='input-field col s12'>
                            <input class='validate' type='text' name='email1' id='email' />
                            <label for='email'>Enter Your Name</label>
                        </div>
                    </div>
                    <div class='row'>
                        <div class='input-field col s12'>
                            <input class='validate' type='password' name='pass1' id='password' />
                            <label for='password'>Enter your Password</label>
                        </div>
                        <label style='float: right;'>
                            <a class='white-text' href=''><b>Forgot Password?</b></a>
                        </label>
                    </div>
                    <center>
                        <div class='row'>
                            <button style="background-color: #292929;" type='submit' name='btn_login' class='col s12 btn btn-large waves-effect '>Login</button>
                        </div>
                    </center>
                </form>
            </div>
        </div>

        @*<br />
        <br />*@
        @if (ViewBag.errorLogin != null)
        {
            <div class="alert">
                <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                @ViewBag.errorLogin
            </div>
        }

    </center>

</main>



