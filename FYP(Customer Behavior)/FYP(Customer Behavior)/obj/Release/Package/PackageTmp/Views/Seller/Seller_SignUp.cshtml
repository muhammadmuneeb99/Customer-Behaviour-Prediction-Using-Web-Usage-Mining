
@{
    ViewBag.Title = "Seller_SignUp";
    Layout = "~/Views/Shared/SellerSignUpLayout.cshtml";
}

<div class="welcomeDiv" style="margin-bottom:60px;">Welcome! You are just One Step away to Sell on Emart.</div>
<div class="mainDiv z-depth-5 hoverable">
    <div class="signUpDiv ">SIGN UP</div>
    <div class="fieldsDiv">
        <div class="row">
            <div class="col s12">
                <div class="row">
                    @using (Html.BeginForm("Seller_SignUp", "Seller", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <form action="Seller_SignUp" method="post">
                            <div class="input-field col s12">
                                <select name="selected_Country" id="comboboxcountry" title="Please Select Country" required>
                                    <option value="-1" disabled selected>Choose your Country</option>
                                    @foreach (var item in ViewBag.cc)
                                    {
                                        <option value="@item.Country_ID">@item.Country_Name</option>
                                    }
                                </select>
                            </div>
                            <div class="input-field col s12">
                                <select id="comboboxstate" name="selected_State" title="Please Select State" required></select>
                            </div>
                            <div class="input-field col s12">
                                <select id="comboboxcity" name="selected_City" title="Please Select City" required></select>
                            </div>
                            <div class="input-field col s12">
                                <select id="comboboxarea" name="selected_Area" title="Please Select Area" required></select>
                            </div>
                            <div class="input-field col s12">
                                <input id="shop_Address" name="shop_Address" type="text" class="validate" required>
                                <label for="shop_Address">Enter Shop Address</label>
                            </div>
                            <div class="input-field col s12">
                                <input id="mobile_number" name="mobile_number" class="validate" minlength="11" value="" maxlength="11" type="text" placeholder="032xxxxxxxx" pattern="[0]{1}[3]{1}[0-9]{2}[0-9]{7}$" title="Please Enter valid Phone Number" required>
                                <label for="mobile_number">Enter Mobile Number</label>
                            </div>
                            <div class="input-field col s12">
                                <input id="pass" name="pass" type="password" class="validate" minlength="8" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9]).{8,}$" title="Please include at least 1 uppercase character, 1 lowercase character, and 1 number." required>
                                <label for="pass">Password</label>
                            </div>
                            <div class="input-field col s12">
                                <input id="email" name="email" type="email" class="validate" title="The domain portion of the email address is invalid (the portion after the " @@")." pattern="^([^\x00-\x20\x22\x28\x29\x2c\x2e\x3a-\x3c\x3e\x40\x5b-\x5d\x7f-\xff]+|\x22([^\x0d\x22\x5c\x80-\xff]|\x5c[\x00-\x7f])*\x22)(\x2e([^\x00-\x20\x22\x28\x29\x2c\x2e\x3a-\x3c\x3e\x40\x5b-\x5d\x7f-\xff]+|\x22([^\x0d\x22\x5c\x80-\xff]|\x5c[\x00-\x7f])*\x22))*\x40([^\x00-\x20\x22\x28\x29\x2c\x2e\x3a-\x3c\x3e\x40\x5b-\x5d\x7f-\xff]+|\x5b([^\x0d\x5b-\x5d\x80-\xff]|\x5c[\x00-\x7f])*\x5d)(\x2e([^\x00-\x20\x22\x28\x29\x2c\x2e\x3a-\x3c\x3e\x40\x5b-\x5d\x7f-\xff]+|\x5b([^\x0d\x5b-\x5d\x80-\xff]|\x5c[\x00-\x7f])*\x5d))*(\.\w{2,})+$" required>
                                <label for="email">E Mail</label>
                            </div>
                            <div class="input-field col s12">
                                <input id="cnic" name="cnic" type="text" class="validate" data-inputmask="'mask': '99999-9999999-9'" placeholder="XXXXX-XXXXXXX-X" required>
                                <label for="cnic">CNIC</label>
                            </div>
                            <label>Select Payment Method that you Support</label>
                            <div class="input-field col s12">
                                <p>
                                    <label style="padding-left:70px;">
                                        <input type="checkbox" name="CreditCard" />
                                        <span>Credit Card</span>
                                    </label>
                                    <label style="padding-left:70px;">
                                        <input type="checkbox" name="CashOnDelivery" />
                                        <span>Cash On Delivery</span>
                                    </label>
                                </p>
                            </div>
                            <div class="input-field col s12">
                                <input id="shop_Name" name="shop_Name" type="text" class="validate" required>
                                <label for="shop_Name">Company Name/Shop Name</label>
                            </div>
                            <div class="input-field col s12">
                                <div class="file-field input-field">
                                    <div class="btn" style="background-color:#292929">
                                        <span style="color: white;">File</span>
                                        <input type="file" name="httpPostedFileBase" id="imageBrowse1" />
                                    </div>
                                    <div class="file-path-wrapper">
                                        <input class="file-path validate" type="text" placeholder="Upload Your Company/Shop Logo" required>
                                    </div>
                                </div>
                            </div>
                            <p class="center red-text">Terms & Condition</p>
                            <p class="center black-text">In Your each Sales Order, emart will take 10% of the Total.</p>
                            <div class="input-field col s12">
                                <p class="center">
                                    <label>
                                        <input type="checkbox" id="t&c" name="t&c" class="t&c" required />
                                        <span>I accept the Terms & Condition.</span>
                                    </label>
                                </p>
                            </div>
                            <div class="mybtn" style="display:none;">
                                <button style="background-color: #292929;" type='submit' id="btn_login" name='btn_login' class='btn_login col s12 btn btn-large waves-effect'>
                                    Sign
                                    Up
                                </button>
                            </div>
                        </form>
                    }
                </div>

            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#imageBrowser1").change(function () {
            var File = this.files;
            if (File && File[0]) {
                ReadImage(File[0])
            }
        });
        $('select').formSelect();
    })
</script>

@if (ViewBag.errorEmail != null)
{
    <script>
        toastr.error("@ViewBag.errorEmail");
    </script>
}
<script type="text/javascript">
    
        $(document).ready(function ()
        {
            $('input[type="checkbox"]').click(function () {
                if ($(this).attr('id') == 't&c') {
                    if ($(this).is(':checked')) {
                        $('.mybtn').fadeIn("slow");
                    }
                    else {
                        $('.mybtn').fadeOut("slow");
                    }
                }
            });
            $('#comboboxcountry').on('change', function () {
                var countryID = $('#comboboxcountry option:selected').val();
                $.ajax({
                    type: 'POST',
                    data: { countryId: countryID },
                    url: '@Url.Action("loadstates", "Seller")',
                    success: function (result)
                    {
                        var s = '<option Value="-1">Please select a State</option>';
                        for (var i = 0; i < result.length; i++) {
                            s += '<option value="' + result[i].SID + '">' +
                                result[i].Name+'</option>'
                        }
                        $('#comboboxstate').html(s);
                        $('select').formSelect();
                    }
                });
            });
            $('.btn_login').click(function () {
                var country = $('#comboboxcountry option:selected').val();
                if (country === '-1') {
                    toastr.warning("Please Select Country");
                }
                var country1 = $('#comboboxstate option:selected').val();
                if (country1 === '-1') {
                    toastr.warning("Please Select State");
                }
                var country2 = $('#comboboxcity option:selected').val();
                if (country2 === '-1') {
                    toastr.warning("Please Select City");
                }
                var country3 = $('#comboboxarea option:selected').val();
                if (country3 === '-1') {
                    toastr.warning("Please Select Area");
                }
            });
        });
</script>
