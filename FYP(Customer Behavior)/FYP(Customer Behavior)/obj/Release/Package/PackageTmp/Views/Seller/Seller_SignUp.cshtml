        $(document).ready(function ()
        {
            $('#comboboxstate').on('change', function () {
                var stateID = $('#comboboxstate option:selected').val();
                $.ajax({
                    type: 'POST',
                    data: { stateId:  stateID},
                    url: '@Url.Action("loadcity", "Seller")',
