@model FYP_Customer_Behavior_.Models.Dtos.ProductPriceUpdateDto
@{
    ViewBag.Title = "EditProduct";
    Layout = "~/Views/Shared/SellerLayout.cshtml";
}

<main>
    <div class="container" style="margin-bottom:50px">
        <p style="font-size:larger" class="center">Update Product</p>
        <div class="addAddress hoverable z-depth-5 center-block">
            <div class="row">
                <form action="EditProduct" method="post">
                    <div class="col l12 s12 m12">
                            <div class="row">
                                <div class="input-field col l12 s12 m12">
                                    <h6 class="center">Product ID : @Model.Product_ID</h6>
                                </div>
                                <div class="input-field col l12 s12 m12">
                                    <h6 class="center">Product Name : @Model.Product_Name</h6>
                                </div>
                                <div class="input-field col l12 s12 m12">
                                    <input id="first_name" name="pPrice" type="text" value="@Model.Price" class="validate" required>
                                    <label for="first_name">Price</label>
                                </div>
                                <div class="input-field col l12 s12 m12">
                                    <input id="first_name" name="qty" type="text" value="@Model.quantity" class="validate" required>
                                    <label for="first_name">Quantity</label>
                                </div>
                                <div class="input-field col l12 s12 m12">
                                    <input id="first_name" name="pDiscount" type="text" value="@Model.Discount" class="validate" required>
                                    <label for="first_name">Discount in Percent</label>
                                </div>

                                <div class="input-field col l12 s12 m12">
                                    <textarea id="textarea1" name="pDes" class="materialize-textarea" required>@Model.Product_Description</textarea>
                                    <label for="textarea1">Description</label>
                                </div>
                                <div class="input-field col l12 s12 m12">
                                    <input id="last_name" name="date" type="date" value="" class="validate" required>
                                    <label for="last_name">Please Enter Current Date</label>
                                </div>
                            </div>
                      
                        <div class="row">
                            <div class="getShipAddr">
                                <button id="getShipAddr" type="submit" class="col l12 m12 s12 btn btn-block waves-effect ">SAVE</button>
                            </div>
                        </div>

                    </div>
                </form>
            </div>
        </div>
            <p style="font-size:medium; text-align:center" ><a href="@Url.Action("Seller_Product","Seller")">Back To List</a></p>
    </div>
</main>

<script>
    $(document).ready(function () {
        $('.datepicker').datepicker();
    });
</script>