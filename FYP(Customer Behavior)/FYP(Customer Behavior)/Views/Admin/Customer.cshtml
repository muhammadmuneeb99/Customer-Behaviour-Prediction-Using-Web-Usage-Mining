
@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/AdminPanel.cshtml";
}

<main>
        <div class="container" style="width:100%; height:auto; margin-top:2%;">
           
                <table class="display centered bordered responsive-table" style="width:100%" id="example">
                    <thead>

                        <tr>
                            <th style="font-size:12px">ID</th>
                            <th style="font-size:12px">Name</th>
                            <th style="font-size:12px">Email</th>
                            <th style="font-size:12px">Phone No</th>
                            <th style="font-size:12px">Gender</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.cl)
                        {
                            <tr>
                                <td style="font-size:12px">@item.Id</td>
                                <td style="font-size:12px">@item.Name</td>
                                <td style="font-size:12px">@item.Email</td>
                                <td style="font-size:12px">@item.contact</td>
                                <td style="font-size:12px">@item.gender</td>
                            </tr>
                        }
                    </tbody>
                </table>
           
        </div>

</main>


