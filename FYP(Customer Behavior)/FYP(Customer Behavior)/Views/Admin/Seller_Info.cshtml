
@{
    ViewBag.Title = "Seller_Info";
    Layout = "~/Views/Shared/AdminPanel.cshtml";
}


<main>

        <div class="container" style="width:100%; height:auto; margin-top:2%;">

                <table class="centered display bordered responsive-table" id="example">
                    <thead>

                        <tr>
                            <th style="font-size:12px">ID</th>
                            <th style="font-size:12px">Name</th>
                            <th style="font-size:12px">Cnic</th>
                            <th style="font-size:12px">Email</th>
                            <th style="font-size:12px">Address</th>
                            <th style="font-size:12px">Phone No</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in ViewBag.si)
                        {
                            <tr>
                                <td style="font-size:12px">@item.Id</td>
                                <td style="font-size:12px">@item.Name</td>
                                <td style="font-size:12px">@item.CNIC</td>
                                <td style="font-size:12px">@item.Email</td>
                                <td style="font-size:12px">@item.Address</td>
                                <td style="font-size:12px">@item.Contact</td>
                            </tr>
                        }

                    </tbody>
                </table>
        </div>
</main>



<script type="text/javascript">
    $(document).ready(function () {
        // Setup - add a text input to each footer cell
        $('#example thead tr').clone(true).appendTo('#example thead');
        $('#example thead tr:eq(1) th').each(function (i) {
            var title = $(this).text();
            if (title === "") {
            }
            else if (title === "Order Date") {
                $(this).html('<input type="text" style="font-size:12px;" placeholder="' + title + '" />');
            }
            else {
                $(this).html('<input type="text" style="font-size:12px;" placeholder="' + title + '" />');
            }

            $('input', this).on('change keyup ', function () {
                if (table.column(i).search() !== this.value.toString()) {
                    table
                        .column(i)
                        .search(this.value.toString())
                        .draw();
                }
            });
        });
        var table = $('#example').DataTable({
            responsive: true,
            orderCellsTop: true,
            //fixedHeader: true
        });
    });
</script>

