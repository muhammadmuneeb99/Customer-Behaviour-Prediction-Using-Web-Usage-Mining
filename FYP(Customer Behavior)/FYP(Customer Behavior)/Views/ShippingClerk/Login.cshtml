
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/ShippingClerkLoginLayout.cshtml";
}

<main>
    <center style="margin-top:100px;">
        <h5 style="color: #292929;">Welcome To emart</h5>
        <div class="container" style="width:350px">
            <div class="z-depth-5 hoverable white lighten-4 row" style="display: inline-block; padding: 32px 30px 0px 30px; border: 1px solid #EEE;">
                <form class="col s12" action="Login" method="post">
                    
                    <div class='row'>
                        <div class='input-field col s12'>
                            <input class='validate' type='email' name='email' id='email' />
                            <label for='email'>Enter your Email</label>
                        </div>
                    </div>
                    <div class='row'>
                        <div class='input-field col s12'>
                            <input class='validate' type='password' name='password' id='password' />
                            <label for='password'>Enter your Password</label>
                        </div>
                        <label style='float: right;'>
                            <a class='white-text' href=''><b>Forgot Password?</b></a>
                        </label>
                    </div>
                    
                    <center>
                        <div class='row'>
                            <button style="background-color: #292929;" type='submit' name='btn_login' class='col s12 btn btn-large waves-effect '>Login</button>
                        </div>
                    </center>
                </form>
            </div>
        </div>

        <br />
        @if (ViewBag.errorLogin != null)
        {
            <div class="alert">
                <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                @ViewBag.errorLogin
            </div>
        }
    </center>
</main>


